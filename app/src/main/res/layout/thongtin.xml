<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_backgroud"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nd"
        android:text="THÔNG TIN NGƯỜI DÙNG"
        android:textSize="23dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ln1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt_nd"
        >
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_htt"
            android:layout_height="wrap_content"
            android:text="Họ và Tên:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/txt_nd"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_hovaten"
            android:layout_height="wrap_content"
            android:text="Nguyễn Kim Kha"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln2"
        android:orientation="horizontal"
        android:layout_below="@id/ln1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cấp bậc   :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/txt_nd"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_capbac"
            android:layout_height="wrap_content"
            android:text="Trung Úy"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            >
        </TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_nd"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_below="@id/ln2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/vien"
        >
    </ImageView>
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_menu_24"
        app:backgroundTint="#8BC34A"
        android:onClick="showPopup">

    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_change"
        android:text="THAY ĐỔI MẬT KHẨU"
        android:textSize="23dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/img_nd"
        android:textColor="@color/black"
        >
    </TextView>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_change"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="220dp"
        android:backgroundTint="#a8edea"
        android:background="@drawable/vien">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:text="Mật khẩu cũ  :">
            </TextView>
            <EditText
                android:id="@+id/pass_old"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:text="Mật khẩu mới:">
            </TextView>
            <EditText
                android:id="@+id/pass_new1"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:text="Xác nhận        :">
            </TextView>
            <EditText
                android:id="@+id/pass_new2"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="ĐỔI MẬT KHẨU"
                android:layout_marginLeft="110dp"
                app:backgroundTint="#8BC34A"></Button>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
